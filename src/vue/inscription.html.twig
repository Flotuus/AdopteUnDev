{% extends "base.html.twig" %}
{% block script %} <script src="js/setAdresse.js"> </script>{% endblock %}
{% block contenu %}

    {% if form.valide is defined %}
    {% if form.valide == true %}
        <h1 class="h3 mb-3 font-weight-normal">Inscription réussie</h1>
        <h1 class="h3 mb-3 font-weight-normal">Voici votre identifiant : {{form.email}}</h1>
        <h1 class="h3 mb-3 font-weight-normal">Un email de vérification vous a été envoyé, vous pourrez vous connecter une vois votre adresse validée</h1>

        <!--  {% if form.role == 1 %}
            <h1 class="h3 mb-3 font-weight-normal">Vous êtes administrateur du site</h1>
        {% else %}
            <h1 class="h3 mb-3 font-weight-normal">Vous êtes un client du site </h1>
        {% endif %} -->
    {% else %}
        <h1 class="h3 mb-3 font-weight-normal">Echec de l'inscription</h1>
        <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1>
        <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=inscription">Retourner sur
                la page d'inscription</a></h1>
    {% endif %}

    {% else %}

    <form  action="index.php?page=inscription" method="post" enctype="application/x-www-form-urlencoded" >
        <div class="form-group">
            <label for="Nom">Nom</label>
            <input type="text" class="form-control" id="Nom"  name="Nom" required>
        </div>
        <div class="form-group">
            <label for="Prenom">Prenom</label>
            <input type="text" class="form-control" id="Prenom" name="Prenom" required>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email"  aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
            <label for="Mdp">Mot De Passe</label>
            <input type="password" class="form-control" id="Mdp" name="Mdp" required>
        </div>
        <div class="form-group">
            <label for="ConfMdp">Confirmer Le Mot De Passe</label>
            <input type="password" class="form-control" id="ConfMdp" name="ConfMdp" required>
        </div>

            
        <label for="departements">Adresse</label>
        <select class="form-control" name="departements" id="departements" style="margin-bottom: 20px">
            <option value='0'>-- Selectionnez une region --</option>
        </select>

        <select class="form-control" name="communes" id="communes" style="margin-bottom: 20px">
            <option value='0'>-- Selectionnez une commune --</option>
        </select>

            <label for="Role">Role</label>
        <select class="form-control" name="Role" id="Role" style="margin-bottom: 20px" >
            <option value="2">Client </option>
            <option value="1">Administrateur</option>
        </select>
        <button type="submit" class="btn btn-primary" name="btInscrire" id="btInscrire" href="index">Submit</button>
    </form>

    {% endif %}

{% endblock %}
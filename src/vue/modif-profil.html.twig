{% extends "base.html.twig" %}
{% block contenu %}

 
    <form  action="index.php?page=modif-profil" method="post" enctype="application/x-www-form-urlencoded" >
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email"  aria-describedby="emailHelp" value="{{ unDeveloppeur.email }}" disabled >
        </div>
        <div class="form-group">
            <label for="Nom">Nom</label>
            <input type="text" class="form-control" id="Nom"  name="Nom" value=" {{ unDeveloppeur.nom }} " required>
        </div>
        <div class="form-group">
            <label for="Prenom">Prenom</label>
            <input type="text" class="form-control" id="Prenom" name="Prenom" value="{{ unDeveloppeur.prenom }} " required>
        </div>
        <h5> Langage</h5>
        {% for l in liste %}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="checkbox" aria-label="Checkbox for following text input" value="{{ l.id }}" id="langage[]" name="langage[]">
                </div>
            </div>
            <input type="text" class="form-control" aria-label="Text input with checkbox" value="{{ l.libelle }}">
        </div>
        {% endfor %}

        <button type="submit" class="btn btn-primary" name="btModifier" id="btModifier" href="index">Modifier</button>
    </form>

{% endblock %}

{% block contenu %}

    <div class="panel panel-default">  <!-- Default panel contents -->
        <div class="panel-heading">Liste des Langages</div>
        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tr><th>Nom</th> <th></th><th></th><th></th></tr>

                {% for l in liste %}
                    <tr>
                    <td>{{l.libelle}}</td>
                    <td> <div class="btn-group btn-group-lg"><a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div></td>

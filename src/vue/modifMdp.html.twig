{% extends "base.html.twig" %}
{% block contenu %}

    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1 class="alert alert-success" role="alert">{{ form.message }}</h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php">Revenir à l'accueil</a></h1>
        {% else %}
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php">Revenir à l'accueil</a></h1>
        {% endif %}
    {% else %}
    <form method="POST" action="index.php?page=modifMdp">
        <div class="form-group">
            <label for="Email">Email : {{ form.email}}</label>

            <input type="hidden" class="form-control" id="Email" name="Email" value="{{ form.email }}">
        </div>
        <div class="form-group">
            <label for="Mdp">Mot De Passe</label>
            <input type="password" class="form-control" id="Mdp" name="Mdp" required>
        </div>
        <div class="form-group">
            <label for="ConfMdp">Confirmer Le Mot De Passe</label>
            <input type="password" class="form-control" id="ConfMdp" name="ConfMdp" required>
        </div>
    <button type="submit" class="btn btn-primary" name="btModif">Modifier votre mot de passe</button>
    </form>

    {% endif %}
{% endblock %}